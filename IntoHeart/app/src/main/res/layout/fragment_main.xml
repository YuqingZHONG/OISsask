<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_green"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="127dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="138dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sports_man"
                android:src="@drawable/sports_person1"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/instantHRTextView"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heart"
                android:src="@drawable/small_heart"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/instantHRTextView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HR"
                android:id="@+id/instantHRTextView"
                android:layout_gravity="center_horizontal"
                android:textSize="60sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                style="@style/MyText"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instant Heart Rate"
        android:id="@+id/instant_hr_button"
        android:background="@drawable/button_default"
        android:singleLine="true"
        android:textColorHighlight="#cccccc"
        android:textColor="#ffffff"
        style="@style/MyText"
        android:layout_margin="10dip"
        android:padding="10dip"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:id="@+id/day_hr_button"
                    android:background="@drawable/button_default"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    style="@style/MyText"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:text="Week"
                    android:id="@+id/week_hr_button"
                    android:background="@drawable/button_default"
                    android:textColor="#ffffff"
                    style="@style/MyText"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:id="@+id/month_hr_button"
                    android:background="@drawable/button_default"
                    android:textColor="#ffffff"
                    style="@style/MyText"/>

        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40ffffff"
            android:id="@+id/graph" />
    </LinearLayout>



</LinearLayout>
