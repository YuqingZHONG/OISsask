<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:touchscreenBlocksFocus="false"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20ffffff"
        android:padding="10dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Score:"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:textSize="40dp"
                style="@style/MyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/final_score_view"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:text="100"
                style="@style/MyText"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart rate score:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                style="@style/MyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/heart_rate_score"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                style="@style/MyText"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise score:"
                android:id="@+id/textView13"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                style="@style/MyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exercise_score"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="33dp"
                style="@style/MyText"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life style score:"
                android:id="@+id/textView14"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                style="@style/MyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/life_style_score"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="29dp"
                style="@style/MyText"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#30ffffff">

        <ListView
            android:id="@+id/ranking_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/MyText"></ListView>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:text="Log in to see ranking"-->
            <!--android:id="@+id/empty_text_view"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_centerHorizontal="true" />-->
    </RelativeLayout>

</LinearLayout>