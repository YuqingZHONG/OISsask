<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You recent heart rate analysis"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            style="@style/MyText"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout"
            android:id="@+id/linearLayout2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="68"
                android:id="@+id/textMin"
                android:layout_marginTop="30dip"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="40sp"
                style="@style/MyText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textColor="#ffffff"
                style="@style/MyText"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="98"
                android:id="@+id/textAve"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="90sp"
                style="@style/MyText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="average"
                android:textColor="#ffffff"
                style="@style/MyText"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="168"
                android:id="@+id/textMax"
                android:layout_marginTop="30dip"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="40sp"
                style="@style/MyText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="max"
                android:textColor="#ffffff"
                style="@style/MyText"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="#20ffffff"
        android:padding="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Score:"
                android:id="@+id/textView12"
                android:textColor="#ffffff"
                android:textSize="40dp" />

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView15"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:text="100"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart rate score:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp" />

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView16"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apnea score:"
                android:id="@+id/textView17"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp" />

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView18"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="33dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life style score:"
                android:id="@+id/textView19"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp" />

            <TextView
                style="@style/MyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView22"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="29dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/healthy_block"
        android:background="#20ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You never have sleep apnea!"
            android:id="@+id/result_text"
            android:textColor="#ffffff"
            style="@style/MyText"
            android:layout_marginRight="50dp"
            android:textSize="30dp"
            android:layout_marginLeft="20dp" />
        <Button
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="What is sleep apnea?"
            android:id="@+id/sleep_apnea"
            android:background="@drawable/button_default"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            style="@style/MyText"
             />


    </LinearLayout>


</LinearLayout>
